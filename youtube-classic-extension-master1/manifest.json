{
  "manifest_version": 2,
  "name": "YouTube Classic",
  "version": "1.4.1",
  "description": "Restore Classic YouTube!",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://www.youtube.com/*"
  ],
  "background": {
    "scripts": ["cookie.js", "background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/yt_classic16.png",
      "32": "images/yt_classic32.png",
      "48": "images/yt_classic48.png",
      "128": "images/yt_classic128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/yt_classic16.png",
    "32": "images/yt_classic32.png",
    "48": "images/yt_classic48.png",
    "128": "images/yt_classic128.png"
  }
}
